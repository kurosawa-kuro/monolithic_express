<div class="row">
  <div class="col-6">
    <h1>Users</h1>
  </div>
  <div class="col-6 d-flex justify-content-end">
    <a href="/samples/new" type="button" class="btn btn-primary align-self-center">+ add user</a>
  </div>
</div>

<table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-end">Action</th>
    </tr>
  </thead>
  <tbody>

    {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>
      <td>{{this.name}}</td>
      <td>{{this.name}}</td>
      <td>{{this.name}}</td>
      <td class="text-end">
        <a href="/samples/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-eye"></i> View</a>
        <a href="/samples/edit/{{this.id}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Edit</a>
        {{!-- <a href="/samples/{{this.id}}/?_method=delete" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete</a> --}}
        {{!-- <form class="row g-3 needs-validation inline" method="POST" action="/samples/{{row.id}}/?_method=PUT" novalidate>  --}}
        <form class="d-inline" method="POST" name="form1" action="/samples/{{this.id}}/?_method=DELETE">
          <input type="hidden" name="user_name" value="名前">
          
          <button class="btn btn-light btn-small" type="submit" name="example"><i class="bi bi-pencil"></i>Delete</button>
        </form>
       

      </td>
    </tr>
    {{/each}}

  </tbody>
